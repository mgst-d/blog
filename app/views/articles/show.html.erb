<h1>Show article.</h1>
<h1> <%= @article.title %> </h1>
<p> <%= @article.text %> </p>
<hr />
<p>
<% @article.comments.each do |comment| %>
<%= comment.author %> <br />
<%= comment.body %>
<hr />
<% end %>
</p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %> <br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :body %> <br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
