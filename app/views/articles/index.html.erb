<div class='container'>
	
	<% @articles.each do |article| %>
		<h4><%= article.title %></h4>
		
			<p>
				<%= article.text %>
			</p>
			
		
			<%= link_to 'Show', article_path(article) %>
			<%= link_to 'Edit', edit_article_path(article) %>
			<%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Подтвердите удаление.'} %>
		
	<hr />

	<% end %>

</div>




